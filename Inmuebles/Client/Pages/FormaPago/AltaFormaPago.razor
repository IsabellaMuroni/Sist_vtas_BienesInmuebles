@page "/Forma-Pago/AltaFormaPago"
@inject NavigationManager NavigationManager
@using System.Net.Http
@inject HttpClient Http
@using System.Net.Http.Json
@using System.Threading.Tasks
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]

<h2>Alta Forma de Pago</h2>

<EditForm Model="@nuevaFormaPago">

    <div class="row g-3">
        <div class="col-md-6">
            <label for="descripcion" class="form-label">Descripción Forma de Pago</label>
            <input type="text" class="form-control" id="descripcion" @bind = "nuevaFormaPago.Desc_forma_pago">
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class = "btn btn-success" @onclick = "CreateFormaPago">Crear Forma de Pago</button>
            <button type="submit" class = "btn btn-primary" @onclick = "Cancelar">Cancelar</button>
        </div>
    </div>
</EditForm>





@code {

    [Parameter]
    public int id { get; set; }

    private clientSwagger.Forma_Pago nuevaFormaPago = new clientSwagger.Forma_Pago();
    private clientSwagger.clientSwagger client = new clientSwagger.clientSwagger("https://localhost:7260/", new HttpClient());

    protected override async Task OnInitializedAsync()
    {
        if (id != 0)
        {
            nuevaFormaPago = await client.FormaPago2Async(id);
        }
    }

    protected async Task CreateFormaPago()
    {
        await client.FormaPagoAsync(nuevaFormaPago);
        NavigationManager.NavigateTo("/Forma-Pago");
    }

    protected void Cancelar()
    {
        NavigationManager.NavigateTo("/Forma-Pago");
    }
}
