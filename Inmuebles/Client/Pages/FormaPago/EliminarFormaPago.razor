@page "/Forma-Pago/EliminarFormaPago/{id:int}"
@inject NavigationManager NavigationManager
@using System.Net.Http
@inject HttpClient Http
@using System.Net.Http.Json
@using System.Threading.Tasks
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]

<h2>Eliminar Forma de Pago</h2>

<EditForm Model="@formaPagoDelete">

    <div class="row g-3">
        <div class="col-12">
            <h3>¿Está seguro que desea eliminar...</h3>
        </div>
        <div class="col-md-6">
            <label for="id" class="form-label">ID</label>
            <input type="number" class="form-control" id="id" readonly @bind="formaPagoDelete.Id_forma_pago">
        </div>

        <div class="col-md-6">
            <label for="descripcion" class="form-label">Descripción Forma de Pago</label>
            <input type="text" class="form-control" id="descripcion" readonly @bind="formaPagoDelete.Desc_forma_pago">
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-danger" @onclick="DeleteFormaPago">Eliminar</button>
            <button type="submit" class="btn btn-primary" @onclick="Cancelar">Cancelar</button>
        </div>
    </div>
    
</EditForm>



@code {
    [Parameter]
    public int id { get; set; }

    private clientSwagger.Forma_Pago formaPagoDelete = new clientSwagger.Forma_Pago();
    private clientSwagger.clientSwagger client = new clientSwagger.clientSwagger("https://localhost:7260/", new HttpClient());

    protected override async Task OnInitializedAsync()
    {
        formaPagoDelete = await client.FormaPago2Async(id);
    }

    protected async Task DeleteFormaPago()
    {
        await client.FormaPago4Async(id);
        NavigationManager.NavigateTo("/Forma-Pago");
    }

    protected void Cancelar()
    {
        NavigationManager.NavigateTo("/Forma-Pago");
    }
}
